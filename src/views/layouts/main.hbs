        }

        .navbar-nav .nav-link {
            font-family: 'Quicksand', sans-serif;
            font-size: 20px;
            font-weight: 700;
            line-height: 31px;
            text-align: left;
            color: white !important;
            transition: color 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 79px;
            /* Make sure height is same as .btn-book */
