    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #313F38;
        }

        .bill-title {
            font-size: 50px;
            margin-left: 630px;
            color: #FCD043;
        }

        .bill {
            width: 1200px;
            height: 1300px;
            background-color: wheat;
            margin: 30px auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .bill h3 {
            margin-bottom: 20px;
            color: #313F38;
            font-weight: 200;
        }

        .bill-tbl {
            width: 100%;
            text-align: center;
            border: 2px solid black;
        }

        .bill-tbl th,
        .bill-tbl td {
            border: 2px solid black;
            padding: 10px;
            /* Đặt padding để tạo khoảng cách giữa nội dung và viền */
        }

        .bill-img {
            width: 400px;
            height: 350px;
        }

        .bill-img img {
            width: 300px;
            height: 300px;
            border-radius: 50%;
        }

        .room-info {
            width: 450px;
            border: 0px;
        }

        .input-date {
            width: 250px;
        }

        .bill-input {
            width: 1100px;
            height: 800px;
            padding: 20px;
            /* Add padding for spacing inside */
            border: 2px solid #313F38;
            /* Add border for visibility */
            box-sizing: border-box;
            /* Ensure padding and border are included in width */
        }

        .bill-input input,
        .bill-input select {
            display: block;
            width: calc(100% - 20px);
            /* Subtract padding width */
            margin-bottom: 15px;
            /* Add margin between inputs */
            padding: 10px;
            /* Add padding for input fields */
            box-sizing: border-box;
            /* Ensure padding is included in width */
        }

        .bill-input button {
            height: 67px;
            width: calc(25% - 20px);
            /* Subtract padding width */
            padding: 20px;
            /* Add padding for input fields */
            box-sizing: border-box;
            /* Ensure padding is included in width */
            margin-left: auto;
            /* Push button to the right */
            color: #FCD043;
            background-color: #313F38;
            transition: background-color 0.3s, color 0.3s;
        }

        .bill-input button:hover {
            color: #313F38;
            background-color: #FCD043;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>

