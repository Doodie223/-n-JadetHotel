<style>
    /* Your custom CSS styles here */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #313F38;
    }

    .container {
        display: flex;

    }

    .decs-room-name {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        line-height: 1;

    }

    .room-detail {
        width: 1400px;
        height: 796px;
    }

    .hotel-detail {
        max-width: 800px;
        margin: 0 auto;
    }

    .hotel-detail img {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }

    .image-wrapper {
        height: 500px;

        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .image-wrapper img {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
    }

    .thumbnail-slider {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 10px;
    }

    .thumbnail-slider .swiper-slide {
        width: 80px;
        height: 60px;
        overflow: hidden;
        cursor: pointer;
        margin: 5px;
    }

    .thumbnail-slider .swiper-slide img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .decs-room {
        width: 500px;
        height: auto;
        background-color: #1A1C21;
        padding: 20px;
        color: wheat;
        border-radius: 10px;
    }



    .decs-room-name {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .room-number,
    .room-price,
    .room-m2,
    .standard,
    .decs-info {
        margin-bottom: 20px;
    }

    .order-btn {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .order-btn:hover {
        color: #313F38 !important;
        background-color: #FCD043;
    }

    .other-rooms {
        margin-top: 30px;
        padding: 20px;
        background-color: #1A1C21;
        color: wheat;
        border-radius: 10px;
    }

    .other-rooms h2 {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .room-cards {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }

    .room-card {
        background-color: #313F38;
        padding: 15px;
        border-radius: 8px;
    }

    .room-info {
        margin-top: 10px;
    }

    .room-info .decs-room-name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .room-info .room-price {
        font-size: 16px;
        margin-bottom: 5px;
    }

    .room-info .room-standard {
        font-size: 14px;
        color: #9FA3A7;
        margin-bottom: 10px;
    }

    .room-card .order-btn {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .room-card .order-btn:hover {
        background-color: #FCD043;
    }
</style>

<div class="container">
    <div class="room-detail">
        <table>
            <td class="img-disp">
                <div class="hotel-detail mt-5">
                    <div class="swiper mySwiper">
                        <div class="swiper-wrapper">
                            {{#each room.roomImages}}
                            <div class="swiper-slide">
                                <div class="image-wrapper">
                                    <img src="{{this}}" alt="Hotel Image">
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        <div class="swiper-pagination"></div>
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                    <div class="thumbnail-slider mt-3">
                        {{#each room.roomImages}}
                        <div class="swiper-slide">
                            <img src="{{this}}" alt="Hotel Image">
                        </div>
                        {{/each}}
                    </div>

                </div>
            </td>
            <td class="decs-room">
                <div class="decs-room-name">
                    <H3> {{room.Room_Specs.type}}</H3>
                </div>
                <div class="room-number">
                    <BR>
                    <p>Số phòng: </p>
                </div>
                <div class="room-price">
                    <BR>
                    <p>Giá phòng: {{room.price}}</p>
                </div>
                <div class="room-m2">
                    <p>Diện tích: {{room.acreage}} m²</p>
                </div>
                <div class="standard">
                    <div>Chất lượng: {{room.Hotel_Standard}}</div>
                </div>
                <div class="decs-info">
                    <div>Tiện ích đi kèm: <br>{{room.description}}</div>
                </div>
                <button type="button" class="order-btn">Đặt ngay</button>
            </td>
        </table>
    </div>


</div>
<div class="other-rooms">
    <h2>Các phòng khác có giá tương tự:</h2>
    <div class="room-cards">
        {{#each suggestedRooms}}
        <div class="room-card">
            <div class="image-wrapper">
                <img src="{{this.image}}" alt="Room Image">
            </div>
            <div class="room-info">
                <div class="decs-room-name">{{this.type}}</div>
                <div class="room-price">Giá phòng: {{this.price}}</div>
                <div class="room-standard">Chất lượng: {{this.standard}}</div>
                <button type="button" class="order-btn">Đặt ngay</button>
            </div>
        </div>
        {{/each}}
        {{#each suggestedRooms}}
        <div class="room-card">
            <div class="image-wrapper">
                <img src="{{this.image}}" alt="Room Image">
            </div>
            <div class="room-info">
                <div class="decs-room-name">{{this.type}}</div>
                <div class="room-price">Giá phòng: {{this.price}}</div>
                <div class="room-standard">Chất lượng: {{this.standard}}</div>
                <button type="button" class="order-btn">Đặt ngay</button>
            </div>
        </div>
        {{/each}}

    </div>


    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-... your integrity hash ..." crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

    <script>
        var swiper = new Swiper('.mySwiper', {
            pagination: {
                el: '.swiper-pagination',
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
        });

        var thumbnailSlides = document.querySelectorAll('.thumbnail-slider .swiper-slide');
        var largeImage = document.querySelector('.mySwiper .swiper-slide-active img');

        thumbnailSlides.forEach((slide, index) => {
            slide.addEventListener('click', () => {
                swiper.slideTo(index);
                largeImage.src = hotel.hotelImages[index];
            });
        });

        var swiperContainer = document.querySelector('.mySwiper');

        swiperContainer.addEventListener('mouseenter', () => {
            swiper.autoplay.stop();
        });

        swiperContainer.addEventListener('mouseleave', () => {
            swiper.autoplay.start();
        });
    </script>